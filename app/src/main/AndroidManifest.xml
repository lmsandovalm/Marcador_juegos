<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_volei_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_volei_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Marcador_juegos"
        tools:targetApi="31">
        <activity
            android:name=".ItemUserActivity"
            android:exported="false" />
        <activity
            android:name=".ListUsersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.game.GameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.game.TeamPlanningActivity"
            android:exported="false" />
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Historial_marcador"
            android:exported="false" />
        <activity
            android:name=".ui.Marcador"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.Menu"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>